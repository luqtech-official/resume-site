---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
  isFullWidth?: boolean;
}

const { title, isFullWidth = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Professional IT Business Analyst Resume" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Business Analyst Portfolio</title>
	</head>
	<body>
    <Navigation />
    <main class={isFullWidth ? '' : 'container'}>
      <slot />
    </main>
    <footer class="footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Fareid Zulkifli, Senior Business Analyst. All rights reserved.</p>
      </div>
    </footer>
	</body>
</html>

<style>
  .footer {
    text-align: center;
    padding: var(--spacing-lg) 0;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-top: var(--spacing-xl);
  }
</style>
