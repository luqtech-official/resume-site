<style>
  /* 
    PREMIUM MINIMALIST THEME v2
    Focus: Distinction, Structure, Whitespace
  */

  .resume-wrapper {
    max-width: 850px;
    margin: 6rem auto;
    padding: 0 2rem;
    color: #333;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  /* --- Header --- */
  .resume-header {
    margin-bottom: 8rem;
    padding-bottom: 4rem;
  }

  .name {
    font-size: 2.75rem;
    font-weight: 300;
    letter-spacing: -0.02em;
    color: #111;
    margin-bottom: 1.25rem;
    line-height: 1.1;
  }

  .contact-info {
    font-size: 0.95rem;
    color: #666;
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 400;
  }

  .separator {
    color: #ccc;
    font-size: 0.8rem;
  }

  /* --- Section Structure --- */
  .resume-section {
    margin-bottom: 8rem;
  }

  .section-divider {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .section-divider::after {
    content: "";
    flex: 1;
    height: 1px;
    background-color: #eee;
  }

  .section-title {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: #999;
    font-weight: 700;
    white-space: nowrap;
  }

  .section-content {
    padding-left: 0; /* Keep it clean and aligned to edge */
  }

  /* --- Summary / Profile --- */
  .summary-text {
    font-size: 1.15rem;
    line-height: 1.85;
    color: #444;
    max-width: 90%;
    font-weight: 300;
  }

  .highlight {
    color: #003366;
    font-weight: 500;
  }

  /* --- Timeline Grid (Experience & Education) --- */
  .timeline-grid {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 3rem;
  }

  .timeline-date {
    font-size: 0.9rem;
    color: #999;
    font-feature-settings: "tnum";
    padding-top: 0.35rem; /* Align with title */
    text-align: left;
    font-weight: 400;
  }

  .timeline-body {
    margin-bottom: 4rem;
  }

  .timeline-body:last-child {
    margin-bottom: 0;
  }

  .role-header {
    margin-bottom: 1.5rem;
  }

  .job-title {
    font-size: 1.35rem;
    font-weight: 500;
    color: #111;
    margin-bottom: 0.35rem;
    line-height: 1.2;
  }

  .company-name {
    font-size: 1rem;
    color: #003366;
    font-weight: 400;
    letter-spacing: 0.01em;
  }

  .job-details {
    list-style: none;
    padding: 0;
  }

  .job-details li {
    font-size: 1.05rem;
    line-height: 1.75;
    color: #555;
    margin-bottom: 1rem;
    font-weight: 300;
    display: flex;
    align-items: flex-start;
  }

  .job-details li::before {
    content: "—";
    margin-right: 15px;
    color: #ccc;
    flex-shrink: 0;
  }

  .job-details li strong {
    font-weight: 500;
    color: #333;
  }

  /* --- Education Meta --- */
  .education-meta {
    font-size: 1.05rem;
    color: #666;
    font-weight: 300;
    line-height: 1.6;
  }

  /* --- Capabilities Grid --- */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 4rem;
  }

  .capability-item h4 {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #003366;
    margin-bottom: 1.25rem;
    font-weight: 700;
  }

  .capability-item p {
    font-size: 1.05rem;
    line-height: 1.85;
    color: #555;
    font-weight: 300;
  }

  /* --- Mobile Responsive --- */
  @media (max-width: 768px) {
    .resume-wrapper {
      margin: 4rem auto;
      padding: 0 1.5rem;
    }

    .resume-header {
      margin-bottom: 5rem;
    }

    .name {
      font-size: 2.25rem;
    }

    .section-divider {
      margin-bottom: 2.5rem;
    }

    .timeline-grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .timeline-date {
      color: #003366;
      font-weight: 500;
      margin-bottom: 0.5rem;
    }

    .timeline-body {
      margin-bottom: 5rem;
    }

    .capabilities-grid {
      gap: 3rem;
    }
  }
</style>

