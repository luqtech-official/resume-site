---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="nav-container">
  <div class="container nav-wrapper">
    <ul class="nav-list">
      <li>
        <a href="/" class={`multiline-nav-item ${pathname === "/" ? "active" : ""}`}>
          <span>Resume</span>
          <span>(Business Analyst)</span>
        </a>
      </li>
      <li>
        <a href="/luqtech" class={`multiline-nav-item ${pathname.startsWith("/luqtech") ? "active" : ""}`}>
          <span>LUQ Technology</span>
          <span>Founder â†’ BA</span>
        </a>
      </li>
      <li>
        <a href="/trading-scripts" class={`multiline-nav-item ${pathname.startsWith("/trading-scripts") ? "active" : ""}`}>
          <span>Showcase</span>
        </a>
      </li>
    </ul>
  </div>
</nav>

<style>
  .nav-container {
    background-color: rgba(250, 250, 250, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-wrapper {
    display: flex;
    justify-content: center;
  }

  .nav-list {
    display: flex;
    list-style: none;
    align-items: stretch;
    width: 100%;
  }

  .nav-list li {
    flex: 1;
  }

  .nav-list a {
    display: block;
    height: 100%;
    /* display: flex; */
    justify-content: center;
    padding: 1rem 0;
    color: var(--color-text-muted);
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    transition: color 0.3s ease;
    position: relative;
    white-space: nowrap;
    text-align: center;
  }

  .multiline-nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    white-space: normal;
    line-height: 1.2;
    text-align: center;
  }

  .multiline-nav-item span {
    display: block;
  }

  .nav-list a:hover {
    color: var(--color-text-main);
  }

  .nav-list a.active {
    color: var(--color-primary);
  }

  .nav-list a.active::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: var(--color-primary);
  }

  @media (max-width: 600px) {
    .nav-list {
      gap: 1rem;
      width: 100%;
      justify-content: center;
    }
    
    .nav-list a {
      font-size: 0.7rem;
      padding: 0.75rem 0;
    }
  }

  @media (max-width: 425px) {
    .container {
      padding: 0 0.5rem;
    }

    .nav-list {
      gap: 0.25rem;
      justify-content: center;
    }

    .nav-list a {
      font-size: 0.55rem;
      letter-spacing: 0.05em;
      padding: 0.75rem 0;
    }
  }
</style>