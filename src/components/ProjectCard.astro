---
interface Props {
  title: string;
  role: string;
  problem: string;
  actions: string[];
  outcomes: string[];
}

const { title, role, problem, actions, outcomes } = Astro.props;
---

<div class="project-card">
  <header class="project-header">
    <div class="header-main">
      <h3 class="project-title">{title}</h3>
      <span class="project-role">{role}</span>
    </div>
  </header>
  
  <div class="project-grid">
    <div class="grid-section">
      <h4 class="label">Challenge</h4>
      <p class="challenge-text">{problem}</p>
    </div>

    <div class="grid-section">
      <h4 class="label">Execution</h4>
      <ul class="bullet-list">
        {actions.map((action) => <li>{action}</li>)}
      </ul>
    </div>

    <div class="grid-section">
      <h4 class="label">Impact</h4>
      <ul class="bullet-list highlight-list">
        {outcomes.map((outcome) => <li>{outcome}</li>)}
      </ul>
    </div>
  </div>
</div>

<style>
  .project-card {
    background: var(--color-white);
    padding: var(--spacing-lg) 0;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--spacing-md);
  }

  .project-card:last-of-type {
    border-bottom: none;
  }

  .project-header {
    margin-bottom: var(--spacing-lg);
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text-main);
    margin-bottom: 0.25rem;
  }

  .project-role {
    font-size: 0.95rem;
    color: var(--color-primary);
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  @media (min-width: 800px) {
    .project-grid {
      grid-template-columns: 280px 1fr;
      column-gap: 4rem;
    }
    
    .grid-section:first-child {
      grid-column: 1 / -1;
      border-bottom: 1px solid #f9f9f9;
      padding-bottom: var(--spacing-md);
      margin-bottom: -1rem;
    }
  }

  .label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
    margin-bottom: 1.25rem;
    font-weight: 600;
  }

  .challenge-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-body);
    font-weight: 300;
    max-width: 800px;
  }

  .bullet-list {
    list-style: none;
    padding: 0;
  }

  .bullet-list li {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-body);
    margin-bottom: 0.75rem;
    font-weight: 300;
    display: flex;
    align-items: flex-start;
  }

  .bullet-list li::before {
    content: "â€”";
    margin-right: 12px;
    color: #ccc;
    flex-shrink: 0;
  }

  .highlight-list li {
    font-weight: 400;
    color: var(--color-text-main);
  }

  .highlight-list li::before {
    color: var(--color-primary);
  }
</style>
